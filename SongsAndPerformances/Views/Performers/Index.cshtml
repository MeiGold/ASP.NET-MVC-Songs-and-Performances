@model IEnumerable<Songs_and_Performances.Models.Performer>

@{
    ViewData["Title"] = "Index";
}

<h1>Performers</h1>

<p>
    <a style="color:indianred" asp-action="Create">Add new performer</a>
</p>

<div class="form-actions no-color">
    <form asp-action="Index" method="get">
        <p>
            Find by Full Name:   <input type="text" name="SearchStringName" value="@ViewData["CurrentFullNameFilter"]" /><br /><br />
            Find by Nationality: <input type="text" name="SearchStringNationality" value="@ViewData["CurrentNationalityFilter"]" />
        </p>
        <p>
            <br />
            <input type="submit" value="Search" style="width:200px;height:40px" class="btn btn-outline-danger" /> |
            <a style="color:indianred" asp-action="Index">Back to Full List</a>
        </p>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <a style="color:black" asp-action="Index" asp-route-sortOrder="@ViewData["FullNameSortParm"]">@Html.DisplayNameFor(model => model.FullName)</a>
            </th>
            <th>
                <a style="color:black" asp-action="Index" asp-route-sortOrder="@ViewData["BirthDateSortParm"]">@Html.DisplayNameFor(model => model.BirthDate)</a>
            </th>
            <th>
                <a style="color:black" asp-action="Index" asp-route-sortOrder="@ViewData["NationalitySortParm"]">@Html.DisplayNameFor(model => model.Nationality)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td>
                <a style="color:indianred" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a style="color:indianred" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a style="color:indianred" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
