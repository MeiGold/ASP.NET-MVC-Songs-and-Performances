@model IEnumerable<Songs_and_Performances.Models.Performer>

@{
    ViewData["Title"] = "Performers";
}

    <h1>Performers</h1>

<p>
    <a style="color:indianred" asp-action="Create">Add new performer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a style="color:black" asp-action="Index" asp-route-sortOrder="@ViewData["FullNameSortParm"]">@Html.DisplayNameFor(model => model.FullName)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td>
                <a style="color:indianred"asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a style="color:indianred"asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a style="color:indianred"asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
