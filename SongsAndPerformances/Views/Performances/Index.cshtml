@model IEnumerable<Songs_and_Performances.Models.Performance>

@{
    ViewData["Title"] = "Index";
}

<h1>Performances</h1>


<p>
    <a style="color:indianred" asp-action="Create">Add new performance</a>
</p>

<div class="form-actions no-color">
    <form asp-action="Index" method="get">
        <p>
            Find by Name:  <input type="text" name="SearchStringName" value="@ViewData["CurrentNameFilter"]" /><br /><br />
            Find by Place: <input type="text" name="SearchStringPlace" value="@ViewData["CurrentPlaceFilter"]" /><br /><br />
            Find by Date:  <input type="date" name="SearchStringDate" value="@ViewData["CurrentDateFilter"]" />
        </p>
        <p>
            <br />
            <input type="submit" value="Search" style="width:200px;height:40px" class="btn btn-outline-danger" /> |
            <a style="color:indianred" asp-action="Index">Back to Full List</a>
        </p>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <a style="color:black" asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                <a style="color:black" asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Date)</a>
            </th>
            <th>
                <a style="color:black" asp-action="Index" asp-route-sortOrder="@ViewData["PlaceSortParm"]">@Html.DisplayNameFor(model => model.Place)</a>
            </th>
            <th>
                <a style="color:black" asp-action="Index" asp-route-sortOrder="@ViewData["SongSortParm"]">@Html.DisplayNameFor(model => model.Song)</a>
            </th>
            <th>
                <a style="color:black" asp-action="Index" asp-route-sortOrder="@ViewData["PerformerSortParm"]">@Html.DisplayNameFor(model => model.Performer)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Song.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Performer.FullName)
            </td>
            <td>
                <a style="color:indianred" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a style="color:indianred" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a style="color:indianred" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
